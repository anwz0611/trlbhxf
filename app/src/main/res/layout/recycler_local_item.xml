<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="center"
    android:gravity="center"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_yx"
            android:layout_width="@dimen/edit_btnsize1"
            android:layout_height="@dimen/edit_btnsize1"
            android:src="@mipmap/item_yx" />

        <TextView
            android:id="@+id/local_item_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="林场(分场)编号:"
            android:textSize="@dimen/text_size1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/local_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
      android:layout_toLeftOf="@+id/local_delete"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/togbtn"
            android:layout_width="@dimen/zoom_btn_size"
            android:layout_height="@dimen/zoom_btn_size"
            android:background="@mipmap/item_guanbi"
            android:text="ToggleButton"
            android:textOff=" "
            android:padding="@dimen/zoom_btn_padding"
            android:textOn=" " />
        <TextView
            android:id="@+id/togbtn_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="关闭"
            android:textSize="@dimen/text_size1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/local_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="@dimen/zoom_btn_size"
            android:layout_height="@dimen/zoom_btn_size"
            android:src="@mipmap/sc_delete"
            android:padding="@dimen/zoom_btn_padding"
           />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="删除"
            android:textSize="@dimen/text_size1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/md_grey_300"/>
</RelativeLayout>